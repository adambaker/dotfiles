[user]
	email = <%= print "email: "; STDOUT.flush; STDIN.gets.chomp %>
	name = <%= print "name: "; STDOUT.flush; STDIN.gets.chomp %>
  editor = <%= ENV['EDITOR'] %>

[github]
  user = <%= print "github username: "; STDOUT.flush; STDIN.gets.chomp %>

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore

